@model ElectricalDistribution


@{
    ViewBag.Title = "Electrical Distribution Substation audit";
}

<div class="" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Electrical Distribution Substation Audit</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Information Captured</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm("ElectricalDistributionAudit", "ElectricalDistributionAudit", FormMethod.Post))


                        @*<form id="BusniessDetailsForm" data-parsley-validate class="form-horizontal form-label-left" asp-controller="HealthSafetyAudit" asp-action="HealthSafetyAudit" method="post">*@
                        {
                            <div class="item form-group">
                                <label asp-for="contractNumber" class="col-form-label col-md-3 col-sm-3 label-align">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" asp-for="contractNumber" id="contractNumber" name="contractNumber" class="form-control">
                                </div>
                            </div>


                            <div class="item form-group">
                                <label asp-for="teamLeader" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" asp-for="teamLeader" id="teamLeader" name="teamLeader" required="required" class="form-control">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="operative1" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="operative1" id="operative1" name="operative1" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="operative2" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="operative2" id="operative2" name="operative2" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="client" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="client" id="client" name="client" class="form-control" type="text">
                                </div>
                            </div>



                            <div class="item form-group">
                                <label asp-for="auditor" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="auditor" id="auditor" name="auditor" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="substationName" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="substationName" id="substationName" name="substationName" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="substationNo" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="substationNo" id="substationNo" name="substationNo" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="activity" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="activity" id="activity" name="activity" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="dateOfAudit" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="dateOfAudit" id="dateOfAudit" name="dateOfAudit" class="date-picker form-control" placeholder="dd-mm-yyyy">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="developmentSite" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="developmentSite" id="developmentSite" name="developmentSite" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="siteAddress" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="siteAddress" id="siteAddress" name="siteAddress" class="form-control" type="text">
                                </div>
                            </div>
                            //Audit questions
                            <div class="x_title">
                                <h2>Audit Questions </h2>
                                <div class="clearfix"></div>
                            </div>

                            for (int i = 0; i < @Model.auditQuestionsLst.Count(); i++)
                            {
                                <div class="item form-group">
                                    @*text box to get the question text*@
                                    @Html.TextBoxFor(model => model.auditQuestionsLst[i].qustionText, new { @hidden = "true" })
                                    <span class="col-form-label text-center col-md-12 col-sm-12  label-align">@Html.DisplayFor(m => m.auditQuestionsLst[i].qustionText)</span>
                                </div>

                                <div class="text-center">
                                    <div class="form-check form-check-inline">
                                        @Html.RadioButtonFor(x => x.auditQuestionsLst[i].ansawer, "Yes")
                                        <label class="form-check-label" for="inlineRadio1">Yes</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        @Html.RadioButtonFor(x => x.auditQuestionsLst[i].ansawer, "No")
                                        <label class="form-check-label" for="inlineRadio1">No</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        @Html.RadioButtonFor(x => x.auditQuestionsLst[i].ansawer, "NA")
                                        <label class="form-check-label" for="inlineRadio1">NA</label>
                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">
                                    </label>
                                    <div class="col-md-6 col-sm-6 ">
                                        @Html.TextBoxFor(model => model.auditQuestionsLst[i].comments, new { @class = "form-control", placeholder = "Comments" })
                                    </div>
                                </div>
                            }


                            //Additional Information
                            <div class="x_title">
                                <h2>Additional Information </h2>
                                <div class="clearfix"></div>
                            </div>

                            <div class="item form-group">
                                <label asp-for="defectFound" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="defectFound" id="defectFound" name="defectFound" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label asp-for="remedialActionTaken" class="col-form-label col-md-3 col-sm-3 label-align">

                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="remedialActionTaken" id="remedialActionTaken" name="remedialActionTaken" class="form-control" type="text">
                                </div>
                            </div>


                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button class="btn btn-primary" type="button">Cancel</button>
                                    <button class="btn btn-primary" type="reset">Signature</button>

                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        }
                        @*</form>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

